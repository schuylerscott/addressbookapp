<h1>Listing addresses</h1>

<%= link_to 'New address', new_post_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>